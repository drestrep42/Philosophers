NAME 			= 		philo

CC 				= 		gcc
CFLAGS 			= 		-g3 -Wall -Wextra -Werror

SRC_DIR			=		src
SRCS			=		main.c parsing.c routine.c utils.c data_init.c

OBJ_DIR			=		obj
OBJS 			= 		$(addprefix obj/, $(notdir $(SRCS:%.c=%.o)))

all:					$(NAME)
	
$(NAME):				$(OBJS) | $(OBJ_DIR)
						@$(CC) $(CFLAGS) $(OBJS) -o philo
						@echo " "
						@echo "ğŸ’­ğŸ’­   ğŸ’­  ğŸ’­  ğŸ’­  ğŸ’­     ğŸ’­ğŸ’­    ğŸ’­ğŸ’­    ğŸ’­ğŸ’­    ğŸ’­ğŸ’­   ğŸ’­  ğŸ’­  ğŸ’­ğŸ’­ğŸ’­  ğŸ’­ğŸ’­    ğŸ’­ğŸ’­"
						@echo "ğŸ’­  ğŸ’­ ğŸ’­  ğŸ’­  ğŸ’­  ğŸ’­   ğŸ’­    ğŸ’­ ğŸ’­     ğŸ’­    ğŸ’­  ğŸ’­  ğŸ’­ ğŸ’­  ğŸ’­  ğŸ’­      ğŸ’­  ğŸ’­ ğŸ’­"
						@echo "ğŸ’­ğŸ’­   ğŸ’­ğŸ’­ğŸ’­  ğŸ’­  ğŸ’­   ğŸ’­    ğŸ’­  ğŸ’­ğŸ’­  ğŸ’­    ğŸ’­  ğŸ’­ğŸ’­   ğŸ’­ğŸ’­ğŸ’­  ğŸ’­ğŸ’­ğŸ’­  ğŸ’­ğŸ’­    ğŸ’­ğŸ’­"
						@echo "ğŸ’­     ğŸ’­  ğŸ’­  ğŸ’­  ğŸ’­   ğŸ’­    ğŸ’­     ğŸ’­ ğŸ’­    ğŸ’­  ğŸ’­     ğŸ’­  ğŸ’­  ğŸ’­      ğŸ’­  ğŸ’­     ğŸ’­"
						@echo "ğŸ’­     ğŸ’­  ğŸ’­  ğŸ’­  ğŸ’­ğŸ’­   ğŸ’­ğŸ’­    ğŸ’­ğŸ’­    ğŸ’­ğŸ’­    ğŸ’­     ğŸ’­  ğŸ’­  ğŸ’­ğŸ’­ğŸ’­  ğŸ’­  ğŸ’­  ğŸ’­ğŸ’­"
						@echo " "

	
$(OBJ_DIR)/%.o:			$(SRC_DIR)/%.c | $(OBJ_DIR)
						@$(CC) $(CFLAGS) -c $< -o $@
	
$(OBJ_DIR):	
						@mkdir -p $(OBJ_DIR)
	
clean:
						@rm -rf $(OBJ_DIR)
	
fclean: clean	
						@rm -rf $(NAME)

re: fclean all
